<%= form_for(@cocktail_recipe) do |f| %>
    <h3><%= f.label :title%></h3> 
    <p><%= f.text_field :title, :class => "form-control"%></p> 

    <h3><%= f.label :category %></h3>
    <p><%= f.text_field :category_name, list: "categories_autocomplete", :class => "form-control" %>
    <datalist id="categories_autocomplete">
      <% Category.all.each do |category| %>
        <option value="<%= category.name %>">
      <% end %></p>
    </datalist>
    
    <h3><%= f.label :description %></h3>
    <p><%= f.text_area :description, :class => "form-control" %> </p><br> 
    
    <%= f.hidden_field :user_id %> 

    <div id="ingredientsSet">
    <h3>Ingredients: <small>(Please write amount and ingredient on each line)</small></h3>
  
    <%= f.fields_for :ingredients do |ingredient_fields| %>
      <div class="ingredientsForm input-group mb-3">
        <%= ingredient_fields.text_field :name, :class => "form-control"%>
        <span class="input-group-text">
          <button type="button" class="removeIngredient close"> &times;</button>
        </span>
      </div>
    <% end %>
  </div>
  
  <div class ="actions" style="text-align: right">
    <a href="javascript:;" id="addNewIngredient" class='btn btn-primary btn-sm'>Add Ingredient</a>
  </div>
      </center>
 



  <h3><%= f.label :directions %></h3>
  <p><%= f.text_area :directions, :class => "form-control" %></p></br>
       
  
  <h4><label>Upload an Image:</label></h4>
  <%= f.file_field :avatar %><br></br>

  <big><%= f.submit %></big> 

<% end %> 

  